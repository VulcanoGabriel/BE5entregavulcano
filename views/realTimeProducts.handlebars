<h1>Real Time Products</h1>

{{!-- creo una clase para dibujar los cambios en tiempo real --}}

<div class="actualizar">

    {{!-- recorro la respuesta que obtengo desde el view router con la sintaxis de handlebars para dibujarla en pantalla
    --}}

    {{#each respuesta}}

    <div class="productos">

        <ul>
            <p>Nombre : {{this.title}}</p>
            <p>Precio : {{this.price}}</p>
            <p>Descripcion : {{this.description}}</p>
            <p>Miniatura : {{this.thumbnail}}</p>
            <p>Stock : {{this.stock}}</p>
            <p>Codigo : {{this.code}}</p>
            <p>Categoria : {{this.category}}</p>
            <p>Estatus : {{this.status}}</p>
            <p>Id : {{this.id}}</p>
        </ul>
    </div>

    {{/each}}
</div>



<script src="/socket.io/socket.io.js">  </script>
<script src="/js/index.js">  </script>